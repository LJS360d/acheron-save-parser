// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate species data (Our)",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "${workspaceFolder}/cmd",
        "-gba='./test/gba/pokeemerald.gba'",
        "-o='species'"
      ],
      "group": {
        "kind": "build",
      },
      "problemMatcher": []
    },
    {
      "label": "Generate species data (Rhh)",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "${workspaceFolder}/cmd",
        "-gba='./test/gba/rhh1.9.2.gba'",
        "-o='species'"
      ],
      "group": {
        "kind": "build",
      },
      "problemMatcher": []
    },
    {
      "label": "Generate Pokemon Docs data",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/build_compare.mjs",
        "-new='./build/our_species.json'",
        "-old='./build/rhh_species.json'",
        "-id='id'",
        "-o='./build/pokemon.json,./../docs/src/data/pokemon.json'"
      ],
      "group": {
        "kind": "none",
      },
      "problemMatcher": []
    },
    {
      "label": "Generate Evolutions Docs data",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/build_compare.mjs",
        "-new='./build/our_evolutions.json'",
        "-old='./build/rhh_evolutions.json'",
        "-id='family'",
        "-o='./build/evolutions.json,./../docs/src/data/evolutions.json'"
      ],
      "group": {
        "kind": "none",
      },
      "problemMatcher": []
    }
  ]
}